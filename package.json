{
  "name": "portfolio-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate-portfolio": "node public/file.js",
    "clean": "rm -rf .next out",
    "build:prod": "npm run clean && npm run generate-portfolio && npm run build",
    "deploy": "./scripts/deploy.sh",
    "deploy:vercel": "./scripts/deploy.sh vercel",
    "deploy:railway": "./scripts/deploy.sh railway",
    "deploy:render": "./scripts/deploy.sh render",
    "deploy:docker": "./scripts/deploy.sh docker",
    "docker:build": "docker build -t portfolio-dashboard .",
    "docker:run": "docker run -p 3000:3000 -d portfolio-dashboard",
    "docker:compose": "docker-compose -f docker-compose.prod.yml up -d --build",
    "health": "curl -s http://localhost:3000/api/health | jq ."
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.0.0",
    "next": "^14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "react-table": "^7.8.0",
    "recharts": "^2.8.0",
    "xlsx": "^0.18.5",
    "yahoo-finance2": "^2.8.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-table": "^7.7.20",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
