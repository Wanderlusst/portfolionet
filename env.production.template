# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security
JWT_SECRET=your-super-secure-jwt-secret-here
COOKIE_SECRET=your-super-secure-cookie-secret-here

# Database (if using external database)
DATABASE_URL=your-production-database-url

# External APIs
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
GOOGLE_FINANCE_API_KEY=your-google-finance-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# CDN and Assets
NEXT_PUBLIC_CDN_URL=https://your-cdn.com
NEXT_PUBLIC_ASSETS_URL=https://your-assets.com
